    <ul>
        <% if(type == "error"){ %>
        <h3 style="color:red">
            <%message%>
        </h3>
        <% } %>
        <% if(type == "success" && report.length == 0){ %>
        <b>Report doesnot exist</b>
        <% } %>
        <%if(type == "success" && report.length != 0){%>
        <h3>New report,</h3>
        <b>Patient ID:</b>
        <%= report.patientid %>
        <p> with </p>
        <b>Bill No:</b>
        <%= report.billno %>
        <p>and</p>
        <b>DOWNLOAD REPORT HERE!!</b>
        <button><a href="/uploads/<%= report.report %>"> Download</a></button>
        <%}%>
    </ul>
