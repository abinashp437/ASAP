                <li><a href="/AmbulanceGo">AmbulanceGo</a></li>
                <li><a href="/feedback">Feedback</a></li>
                <li><a href="/review">Reviews</a></li>
            </ul>
            </ul>
        </div>
    </nav>

    <h3 style="text-align:center;color: black;font-size: 3em;">Requirement of Staff</h3>
    <div style="padding:20px; color:black ">
        <table style="background: grey;border:black 2x solid; box-shadow: 5px 10px black; box-sizing: border-box;padding: 10px; margin: 5px;">
            <tr>
                <th>S.No</th>
                <th>PHC NAME</th>
                <th>ADDRESS</th>
                <th>STAFF REQUIRED QUANTITY</th>
                <th>DEPARTMENT</th>
                <th>CONTACT</th>
            </tr>
            <% for(var i=0; i<Requires.length; i++) {%>
            <tr>
                <th>
                    <%= i+1 %>
                </th>
                <th>
                    <%= Requires[i].name %>
                </th>
                <th>
                    <%= Requires[i].address %>
                </th>
                <th>
                    <%= Requires[i].staffreq %>
                </th>
                <th>
                    <%= Requires[i].department %>
                </th>
                <th>
                    <%= Requires[i].contact %>
                </th>

            </tr>
            <% } %>

        </table>
    </div>
    <br>

    <br>
    <div style="text-align:center;color: black;font-size: 3em;">
        <h3 style="text-align:center;color: black;font-size: 1em;">Add Requirements</h3>
        <form action="/loginstaff" method="GET">
            <h3 style="text-align:center;color: black;font-size: .5em;">Click the button for login <span style="color:gold">Only
                    for Administartors use</span> </h3>
            <button type="submit">Go to Login</button>
        </form>
    </div>
</body>

</html>